<Window x:Class="KonkovA_pr6_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonkovA_pr6_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <DockPanel Grid.Row="0" Grid.ColumnSpan="3">
            <Menu>
                <MenuItem Header="Главная"/>
                <MenuItem Header="Профиль"/>
                <MenuItem Header="Настройки"/>
                <MenuItem Header="Помощь"/>
            </Menu>
        </DockPanel>

        <Border Grid.Column="0" Grid.Row="1" BorderBrush="#000" Background="White" Margin="10">
            <Button Height="20" VerticalAlignment="Bottom" Margin="10" FontSize="12" Content="Загрузить фото"/>
        </Border>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="ФИО: " FontSize="14"/>
            <Label Content="Email: " FontSize="14"/>
            <Label Content="Телефон: " FontSize="14"/>
            <Label Content="Дата рождения: " FontSize="14"/>
            <Label Content="Пол: " FontSize="14"/>
            <Label Content="Пароль: " FontSize="14"/>
            <Label Content="Подтверждение пороля: " FontSize="14"/>
        </StackPanel>

        <WrapPanel Orientation="Vertical" Background="LightGray" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Margin="10">
            <Label Content="* Пароль должен содержать минимум 8 символов."/>
            <WrapPanel Orientation="Horizontal">
                <Label Content="* Email должен быть в формате name@mail.com. "/>
                <Label Content="* Все поля обязательны. " Margin="20 0 0 0" />
            </WrapPanel>
        </WrapPanel>

        <StackPanel Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 10 0">
                <Button Content="Зарегестрироваться" Margin="10 0 0 0" Width="150"/>
                <Button Content="Отмена"  Margin="10 0 0 0" Width="100"/>
            </WrapPanel>
        </StackPanel>
        <DockPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" Background="LightGray">
            <Label Content="Готово"/>
        </DockPanel>
    </Grid>
</Window>
